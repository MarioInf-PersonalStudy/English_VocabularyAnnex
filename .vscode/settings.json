{
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk ➝ build/",
      "tools": ["latexmk (build dir)"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk (build dir)",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-interaction=nonstopmode",
        "-synctex=1",
        "-output-directory=../build",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.rootFile.useSubFile": false,
  "latex-workshop.latex.rootFile.doNotPrompt": true,
  "latex-workshop.latex.outDir": "../build",
  
  //Configuración del visor
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.synctex.synctexjs.enabled": true,
  "latex-workshop.forwardSearch.afterBuild.enabled": true,
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.synctex.editor.command": "code",
  "latex-workshop.synctex.editor.args": [
    "-g",
    "%file:%line"
  ]
}
